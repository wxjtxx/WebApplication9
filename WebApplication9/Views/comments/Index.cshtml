


@model IEnumerable<Blog.Models.comment>

@{

    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
  
    <table class="table">
        <h4>评论</h4>
        <tr>
     
            <th>
               
                点赞
            </th>
            <th>
              
                评论内容
            </th>
            <th>
              
                打赏金额
            </th>
            <th>
               
                评论时间
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.likes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.comment1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.reward)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.comment_time)
                </td>
                <td>
                    @Html.ActionLink("新建", "Create")
                    @Html.ActionLink("修改", "Edit", new { id = item.Comment_id }) |
                    @Html.ActionLink("详细", "Details", new { id = item.Comment_id }) |
                    @Html.ActionLink("删除", "Delete", new { id = item.Comment_id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
