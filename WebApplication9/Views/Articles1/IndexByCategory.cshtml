


@model IEnumerable<Blog.Models.Article>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



<table class="table">

    <tr>
        <th>
            @Html.ActionLink("生活", "IndexByCategory", "Articles1", new { Category = "生活" }, new { target = "_self" })
        </th>
        <th>
            @Html.ActionLink("政治", "IndexByCategory", "Articles1", new { Category = "政治" }, new { target = "_self" })
        </th>
        <th>
            @Html.ActionLink("教育", "IndexByCategory", "Articles1", new { Category = "教育" }, new { target = "_self" })
        </th>
    </tr>
    <tr>
        <th>
          
            博文标题
        </th>
        <th>

            博文内容
        </th>
        <th>
   
            访问量
        </th>
        <th>

            发表时间
        </th>
        <th>

            博文分类
        </th>
        <th>
  
            作者
        </th>
        <th></th>
    </tr>



    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Article_title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Article_text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visit_quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Release_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserInfo.User_name)
            </td>

        </tr>
    }


</table>
<button type="submit" class="btn btn-default">@Html.ActionLink("留言", "Login", "Login") </button>
<button type="submit" class="btn btn-default">@Html.ActionLink("私信", "Create", "Private_letter1")</button>

<button type="submit" class="btn btn-default">点赞</button>